@model IEnumerable<WebApplication2.Models.Expenditure>

@{
    ViewBag.Title = "Admin";
}

<div style="margin-top: 10px;">
    <a href="@Url.Action("Index", "AdminUsers")"><button type="button" class="btn btn-secondary">Admin user panel</button></a>
    <a href="@Url.Action("Index", "AdminIncomes")"><button type="button" class="btn btn-secondary">Admin income panel</button></a>
    <a href="@Url.Action("Index","AdminExpenditures")"><button type="button" class="btn btn-secondary">Admin expenditure panel</button></a>
</div>

<h2>View/Edit expenditure entries for all users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desciption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desciption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ExpenditureId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ExpenditureId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ExpenditureId })
        </td>
    </tr>
}

</table>
